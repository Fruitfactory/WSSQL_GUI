<local:HightliteTextBlockBase x:Class="WSUI.Infrastructure.Controls.HightliteTextBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:local="clr-namespace:WSUI.Infrastructure.Controls"
             >
    <DockPanel LastChildFill="True">
        <TextBlock TextWrapping="Wrap"  x:Name="textBlock"   
                   
                        FontSize="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:HightliteTextBlock}},Path=FontSizeLabel}"
                        FontStyle="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:HightliteTextBlock}},Path=FontStyleLabel}" 
                        FontWeight="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:HightliteTextBlock}},Path=FontWeightLabel}"
                        Foreground="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:HightliteTextBlock}},Path=ForegroundColor}"
                   />
    </DockPanel>
</local:HightliteTextBlockBase>
