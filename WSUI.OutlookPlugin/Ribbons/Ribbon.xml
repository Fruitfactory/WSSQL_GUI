            <button id="buttonSettings" label="Settings" onAction="OnSettings" />
            <button id="buttonSend" label="Send log files..." onAction="OnSendLogFiles" />
            <button id="buttonHelp" label="Help" getImage="GetCustomImage" onAction="OnHelp" />
            <menuSeparator id="separator1" />
