<?xml version="1.0" encoding="UTF-8"?>

<customUI onLoad="Ribbon_Load" xmlns="http://schemas.microsoft.com/office/2006/01/customui">
  <ribbon>
    <tabs>
      <tab idMso="TabAddIns">
        <group id="group1" label="Outlook Finder">
          <editBox id="editSearch" label="editBox2" showLabel="false" showImage="false" />
          <button id="btnSHButton" label="Show/Hide" getImage="GetCustomImage" 
                  onAction="OnShowHide"/>
          <menu id="menuMore" label="More" getImage="GetCustomImage">
            <button id="btnSettings" label="Settings..." onAction="OnSettings" />
            <button id="btnSendLogFiles" label="Send log files" onAction="OnSendLogFiles" />
